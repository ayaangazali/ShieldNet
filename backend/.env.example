# Database
# For PostgreSQL (Recommended for production)
DATABASE_URL=postgresql://user:password@localhost:5432/shieldnet
ASYNC_DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/shieldnet

# For SQLite (Easier for local development, no PostgreSQL required)
# DATABASE_URL=sqlite:///./shieldnet.db
# ASYNC_DATABASE_URL=sqlite+aiosqlite:///./shieldnet.db

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# LOCUS - USDC Payment Execution
# ============================================
# Used ONLY for moving USDC when invoices are APPROVED
# See treasury.py for payment execution logic
LOCUS_API_KEY=your-locus-api-key
LOCUS_WALLET_ADDRESS=0x...
LOCUS_PRIVATE_KEY=0x...
USDC_CONTRACT_ADDRESS=0xA0b86991c6218b36c1d19D4a2e9Eb0cE3606eB48

# ============================================
# THREAT INTELLIGENCE STORAGE
# ============================================
# By default, threats are stored LOCALLY (no blockchain required)
# Set USE_ONCHAIN_THREATS=true to enable Base mainnet blockchain integration

# Feature flag: Enable blockchain threat reporting (default: false)
USE_ONCHAIN_THREATS=false

# BASE MAINNET (OPTIONAL - only needed if USE_ONCHAIN_THREATS=true)
# Used for storing anonymized threat fingerprints from BLOCKED invoices
# See shieldnet_contract_client.py for blockchain interaction
BASE_RPC_URL=https://base-mainnet.g.alchemy.com/v2/your-alchemy-api-key
REPORTER_PRIVATE_KEY=0x...
SHIELDNET_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# ShieldNet Network
SHIELDNET_API_URL=https://api.shieldnet.network
SHIELDNET_API_KEY=your-api-key

# Redis (for Celery/Caching)
REDIS_URL=redis://localhost:6379/0

# Application
ENVIRONMENT=development
DEBUG=True
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# File Upload
MAX_UPLOAD_SIZE=10485760  # 10MB
UPLOAD_DIR=./uploads

# Fraud Detection Thresholds
HIGH_CONFIDENCE_THRESHOLD=0.85
LOW_FRAUD_THRESHOLD=0.15
AUTO_PAY_MAX_AMOUNT=2000
